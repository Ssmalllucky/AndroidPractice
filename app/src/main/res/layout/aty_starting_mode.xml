<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/standardBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard启动" />

    <Button
        android:id="@+id/singleTopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTop启动" />

    <Button
        android:id="@+id/singleTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTask启动" />

    <Button
        android:id="@+id/singleInstanceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleInstance启动" />

    <Button
        android:id="@+id/singleInstancePerTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleInstancePerTask启动" />
</LinearLayout>